<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="usersearch">
	
	<!-- 좋아요 삭제 -->
	<delete id="delLike" parameterType="string">
		DELETE FROM LIKE_LIST
		WHERE U_ID = #{u_id}
	</delete>
	
	<!-- 댓글 삭제 -->
	<delete id="delComm" parameterType="string">
		DELETE FROM COMM
		WHERE U_ID = #{u_id}
	</delete>
	
	<!-- 피드 삭제 -->
	<delete id="delFeed" parameterType="string">
		DELETE FROM FEED
		WHERE U_ID = #{u_id}
	</delete>
	
	<!-- 팔로우 테이블 삭제 -->
	<delete id="delFollow" parameterType="string">
		DELETE FROM FOLLOW
		WHERE TO_ID = #{u_id}
		OR FROM_ID = #{u_id}
	</delete>
	
	<!-- 아이디검색 -->
	<select id="select_id_bio" parameterType="string" resultType="com.sns.user.db.UserVO">
		SELECT *
		FROM USER_INFO
		WHERE U_ID LIKE '%'||#{u_id}||'%'
		OR BIO LIKE '%'||#{u_id}||'%'
    </select>
	
	<!-- 계정 삭제 -->
	<delete id="delete" parameterType="map" >
		delete  from USER_INFO 
		where U_ID = #{u_id}
		AND PWD = #{delkeyword}
	</delete>
	
	
	


</mapper>