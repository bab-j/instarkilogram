<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="post">
	
	<!-- 나의 팔로우 여부 판단 : 헷갈림 int or vo ~~~~~~~~아직 미사용~~~~~~~-->
	<!-- <select id="followCheck" parameterType="map" resultType="com.sns.follow.FollowVO"> -->
	<select id="followCheck" parameterType="map" resultType="int">
		SELECT * FROM FOLLOW 
		WHERE FROM_ID = #{u_id}
		AND TO_ID = #{f_id}
	</select>
	
	<!-- 나의 팔로잉들 -->
	<select id="myFollowing" parameterType="string" resultType="com.sns.follow.FollowVO">
		SELECT * FROM FOLLOW WHERE FROM_ID = #{f_id}
	</select>
	
	<!-- 나의 팔로워들 -->
	<select id="myFollower" parameterType="string" resultType="com.sns.follow.FollowVO"> 
		SELECT * FROM FOLLOW WHERE TO_ID = #{f_id}
	</select>
	
	<!-- 작성자로 게시글 조회 -->
	<select id="getPosts" parameterType="string" resultType="com.sns.feed.db.FeedVO">
		SELECT * FROM FEED WHERE U_ID = #{f_id}
	</select>
	
	<!-- feed u_id(f_id)로 개인정보 조회 -->
	<select id="otherUser" parameterType="string" resultType="com.sns.user.db.UserVO">
		SELECT * FROM USER_INFO WHERE U_ID = #{f_id}
	</select>

	<!-- f_idx로 개별 게시물 조회 ok-->
	<select id="idvPost" parameterType="int" resultType="com.sns.feed.db.FeedVO">
		SELECT *
		FROM FEED
		WHERE F_IDX =#{f_idx}
	</select>
	
	
	<!-- 메인 피드 전체 게시글 수 ok-->
	<select id="totalCountMain" parameterType="string" resultType="com.sns.feed.db.FeedVO">
        SELECT * FROM FEED WHERE U_ID = #{u_id}
	    UNION
	    SELECT FEED.*
	    FROM FEED, (SELECT * FROM FOLLOW WHERE FROM_ID = #{u_id}) FW
	    WHERE FEED.U_ID = FW.TO_ID
        
	</select>
	
	<!-- 메인 피드 : 한 페이지에서 보이는 게시글 목록ok -->
	<select id="mainFeed" parameterType="map" resultType="com.sns.feed.db.FeedVO">
		SELECT *
        FROM (SELECT ROWNUM R_NUM, PP.*
            FROM (SELECT *
                 FROM (SELECT * FROM FEED WHERE U_ID = #{u_id}
                    UNION
                    SELECT FEED.*
                    FROM FEED, (SELECT * FROM FOLLOW WHERE FROM_ID = #{u_id}) FW
                    WHERE FEED.U_ID = FW.TO_ID) TT
                 ORDER BY TT.F_IDX DESC) PP)
        WHERE R_NUM BETWEEN TO_NUMBER(#{begin}) AND TO_NUMBER(#{end})
		
	</select>
	
	<!-- 게시글 등록 ok-->
	<insert id="insert" parameterType="com.sns.feed.db.FeedVO">
		INSERT INTO FEED (F_IDX, REGDATE, CONTENT, U_ID, U_PIC, F_LIKE, F_PIC) 
                VALUES (FEED_SEQ.NEXTVAL,SYSDATE,#{content},#{u_id},#{u_pic},NULL,#{f_pic})
	</insert>
	
	<!-- 로그인 ok-->
	<select id="login" parameterType="map" resultType="com.sns.user.db.UserVO">
		SELECT * 
		FROM USER_INFO
		WHERE U_ID = #{u_id} AND PWD = #{pwd}
	</select>

</mapper>



















